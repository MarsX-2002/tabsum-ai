{
  "name": "tabsum-ai",
  "version": "1.0.0",
  "description": "AI-powered web content summarizer using Google's Gemini Pro",
  "type": "module",
  "main": "background.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "build": "node scripts/build.js",
    "build:chrome": "node scripts/build.js chrome",
    "build:firefox": "node scripts/build.js firefox",
    "build:edge": "node scripts/build.js edge",
    "clean": "rimraf build/*",
    "release": "npm run clean && npm run build",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MarsX-2002/tabsum-ai.git"
  },
  "keywords": [
    "chrome-extension",
    "ai-summarizer",
    "gemini-pro",
    "web-content",
    "productivity-tool"
