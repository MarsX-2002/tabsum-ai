  "author": "MarsX-2002",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MarsX-2002/tabsum-ai/issues"
  },
  "homepage": "https://github.com/MarsX-2002/tabsum-ai#readme",
  "dependencies": {
    "@google/generative-ai": "^0.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@testing-library/jest-dom": "^5.16.5",
    "archiver": "^5.3.1",
    "babel-jest": "^29.7.0",
    "eslint": "^8.50.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^5.0.1"
  }
